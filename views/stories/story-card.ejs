<div class="card bg-black">
    <% if (story.achievment) { %>
    <div class="card-header">
        Achieved
        <span class="badge badge-<%= statusToBootstrap(story.achievment) %>">
            <%= story.achievment %>
        </span>
        in
        <a href="/contests/<%= story.contest.tag %>">
            this Contest!
        </a>
    </div>
    <% } %>
    <div class="card-body">
        <h5 class="card-title"><%= story.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted">
            Created <%= moment(story.createdAt).fromNow() %> by
            <a href="/profile/<%= story.author.username %>">
                <%= story.author.username %>
            </a>
        </h6>
        <p class="card-text"><%= story.description %></p>
        <a href="/contests/<%= story.contest.tag %>/stories/<%= story._id %>" class="btn btn-primary m-1">
            Read Story!
        </a>
        <% if (story.judgingMode) { %>
        <a href="/judge/contests/<%= story.contest.tag %>/stories/<%= story._id %>" class="btn btn-info">Judge Story</a>
        <% } %>
        <% if (user && (isAdmin || story.author.username == user.username)) { %>
        <% if (story.author.username == user.username) { %>
        <a href="/contests/<%= story.contest.tag %>/stories/<%= story._id %>/edit" class="btn btn-warning m-1">
            Edit Story
        </a>
        <% } %>
        <form action="/contests/<%= story.contest.tag %>/stories/<%= story._id %>?_method=DELETE" method="POST" class="d-inline m-1">
            <button type="submit" class="btn btn-danger">
                Delete story
            </button>
        </form>
        <% } %>
        <% if (story.judgingMode) { %>
        <p>This story has been judged <%= story.scores.length %> times</p>
        <% } %>
    </div>
</div>