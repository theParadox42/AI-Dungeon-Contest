<%- include("../partials/header") -%>

<div class="container">
    <h1>Edit Story Info</h1>
    <form action="/stories?_method=PUT" method="POST">
        <div class="form-group">
            <label for="title">Story Title</label>
            <input type="text" name="title" class="form-control" id="title" value="<%= story.title %>" required>
        </div>
        <div class="form-group">
            <label for="description">Story Description</label>
            <input type="text" name="description" class="form-control" id="description" value="<%= story.description %>" required>
        </div>
        <div class="form-group">
            <label for="link">Story Link</label>
            <input type="url" name="link" class="form-control" placeholder="https://play.aidungeon.io/stories?story=storyid" id="link" value="<%= story.link %>" pattern="https?:\/\/play.aidungeon.io\/stories\?story=.*" aria-describedby="linkHelp" required>
            <small class="form-text text-muted" id="linkHelp">
                In order to match the pattern it must be a valid link from AI Dungeon
            </small>
        </div>
        <button type="submit" class="btn btn-primary">
            Post Story!
        </submit>
    </form>
</div>

<%- include("../partials/footer") -%>