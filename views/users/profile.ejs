<%- include("../partials/header") -%>

<div class="container">
    <h1>Profile for "<%= user.username %>"</h1>
    <h2>
        <% user.roles.forEach(function(role) { %>
            <span class="badge badge-<%= statusToBootstrap(role) %>">
                <%= role %>
            </span>
        <% }); %>
    </h2>
    <h3>Stories!</h3>
    <% if (user.stories.length > 0) { %>
    <div class="row-1 row-sm-2 row-md-3">
        <% user.stories.forEach(function(story) { %>
        <div class="col">
            <%- include("../partials/story-card", { story: story }) -%>
        </div>
        <% }); %>
    </div>
    <% } else { %>
    <div>This user has no stories!</div>
    <% } %>
</div>

<%- include("../partials/footer") -%>